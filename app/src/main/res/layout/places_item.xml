<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="@color/material_dynamic_primary90"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <ImageView
                android:id="@+id/activities_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/title"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/test_image"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="237dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:text="Title"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/activities_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description"
                android:layout_width="235dp"
                android:layout_height="41dp"
                android:layout_marginTop="8dp"
                android:text="Description"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/activities_image"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"
                card_view:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/tag"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/cardview_dark_background"
                android:text="Tag"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/activities_image"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/description"
                card_view:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/price"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/cardview_dark_background"
                android:text="Price"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/tag"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonFavourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/btn_star_big_off"
                app:layout_constraintStart_toStartOf="@id/activities_image"
                app:layout_constraintTop_toBottomOf="@id/activities_image"
                card_view:backgroundTint="#5CA6AF" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>